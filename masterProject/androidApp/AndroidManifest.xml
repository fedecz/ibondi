<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uadepfi.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/iconbus"
        android:label="@string/app_name" >

        <!-- USES DECLARATION -->
        <uses-library
            android:name="com.google.android.maps"
            android:required="true" />

        <!-- MAIN ACTIVITY -->
        <activity
            android:name="com.uade.pfi.androidapp.activity.TransportMeMainActivity"
            android:icon="@drawable/iconbus"
            android:label="@string/app_name"
            android:launchMode="standard" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- CHECK-IN ACTIVITY -->
        <activity
            android:name="com.uade.pfi.androidapp.activity.CheckInActivity"
            android:label="@string/title_activity_select_transport" >
        </activity>

        <!-- MAP ACTIVITY -->
        <activity
            android:name="com.uade.pfi.androidapp.activity.TransportMapActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- GPS SERVICE -->
        <service
            android:name="com.uade.pfi.androidapp.service.TransportMeService"
            android:enabled="true"
            android:icon="@drawable/iconbus"
            android:label="@string/app_name" >
        </service>

    </application>

</manifest>
